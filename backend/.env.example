# Server
PORT=3000
NODE_ENV=development

# MongoDB (for relational data)
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/support-chat
# or
# MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/support-chat

# AstraDB (for vector embeddings)
ASTRA_DB_ENDPOINT=https://example-uuid-us-east-1.apps.astra.datastax.com
ASTRA_DB_APPLICATION_TOKEN=AstraCS:example:example
ASTRA_DB_KEYSPACE=reaidy
ASTRA_DB_COLLECTION=document_chunks

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Groq API (for LLM chat)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# HuggingFace API (for embeddings - gte-large)
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
HUGGINGFACE_MODEL=Alibaba-NLP/gte-large-en-v1.5

# Embedding Configuration
EMBEDDING_DIMENSIONS=1024
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS
FRONTEND_URL=http://localhost:8080
